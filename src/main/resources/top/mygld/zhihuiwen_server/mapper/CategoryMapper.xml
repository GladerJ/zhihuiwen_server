<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.mygld.zhihuiwen_server.mapper.CategoryMapper">

    <select id="selectQuestionnaireCategoryByUsername" resultType="top.mygld.zhihuiwen_server.pojo.Category">
        SELECT * FROM category
        WHERE user_id = (SELECT id FROM user WHERE username = #{username})
          AND catalog = 'questionnaire'
    </select>

</mapper>